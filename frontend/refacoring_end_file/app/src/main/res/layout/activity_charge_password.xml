<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChargePasswordActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <ImageButton

        android:layout_width="48dp"
        android:paddingRight="22dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="22dp"
        android:background="@color/white"
        android:contentDescription="previous page button"

        android:src="@drawable/baseline_arrow_back_ios_new_24"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="22dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연결된 계좌"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:textColor="@color/grey80"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="농협 111-222-333333"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:textColor="@color/grey80"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />


    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/pretendard_semi_bold"
            android:gravity="center"
            android:text="13,000"
            android:textColor="@color/no_green"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/pretendard_semi_bold"
            android:gravity="center"
            android:text="원"
            android:textColor="@color/main_selected"
            android:textSize="40sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box_keypad"
        android:orientation="vertical"
        android:paddingHorizontal="22dp"
        android:paddingTop="20dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="계좌비밀번호"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:gravity="center"
                android:fontFamily="@font/pretendard_semi_bold"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/box_password_selected"
                    />
                <Space
                    android:layout_width="16dp"
                    android:layout_height="10dp"
                    />

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/box_password"
                    />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="10dp"
                    />

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/box_password"
                    />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="10dp"
                    />

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/box_password"
                    />



            </LinearLayout>


        </LinearLayout>



        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey40"
            />


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <!--        키패드-->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:paddingBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"

                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"


                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"


                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/black"

                android:textSize="28sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"

                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black"

                android:textSize="28sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"


                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/black"

                android:textSize="28sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"


                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/black"

                android:textSize="28sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"

                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/black"

                android:textSize="28sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"


                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"


                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="28sp" />


            <ImageButton
                android:id="@+id/payment_disabled"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"

                android:background="@color/white"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:src="@drawable/icon_previous"
                android:contentDescription="delete latest number button"

                android:textSize="28sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"


                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/finish"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"


                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="완료"
                android:textColor="@color/black"
                android:textSize="26sp" />


        </GridLayout>


    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PayIdentificationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="22dp"
        android:orientation="vertical"
        >
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정보가 맞는지\n확인해주세요"
           android:fontFamily="@font/pretendard_bold"
            android:textSize="36sp"
            android:textColor="@color/black"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일치하지 않을경우 다시 한 번 시도해주세요"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:textColor="@color/grey80"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            />
        
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="270dp"
                    android:src="@drawable/img_dog10"
                    android:adjustViewBounds="true"
                    android:contentDescription="TODO" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조아"
                        android:fontFamily="@font/pretendard_bold"
                        android:textSize="44sp"
                        android:textColor="@color/no_green"
                        />

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="말티푸"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="20sp"
                        android:textColor="#ff8E8E8E"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="@color/grey30"
                    />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />

                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:gravity="center"

                        android:background="@drawable/btn_outline_grey_round"
                        android:text="성별"
                        android:textColor="#FF838383"
                        android:fontFamily="@font/pretendard_regular"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남아"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="24sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중성화 했어요"
                        android:fontFamily="@font/pretendard_regular"
                        android:textSize="14sp"
                        android:textColor="#ff8E8E8E" />

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:gravity="center"

                            android:background="@drawable/btn_outline_grey_round"
                            android:text="나이"
                            android:textColor="#FF838383"
                            android:fontFamily="@font/pretendard_regular"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4살"
                            android:fontFamily="@font/pretendard_medium"
                            android:textSize="24sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019년 5월생"
                            android:fontFamily="@font/pretendard_regular"
                            android:textSize="14sp"
                            android:textColor="#ff8E8E8E" />

                    </LinearLayout>

            </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />



            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="아니오"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/grey60"
                android:textSize="20sp"


                android:background="@drawable/btn_grey_thirty"
                />
            <Space
                android:layout_width="10dp"
                android:layout_height="10dp"
                />

            <Button
                android:id="@+id/confirm_identification"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="네 맞습니다"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/button_no_green"
                />


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
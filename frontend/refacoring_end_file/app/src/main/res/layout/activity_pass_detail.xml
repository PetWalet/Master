<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PassDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="22dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:paddingRight="22dp"
                android:contentDescription="이전"
                android:background="@color/white"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semi_bold"
                android:text="양도요청 확인"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:text="새로운 반려가족의 계좌인지\n정보를 확인하세요"
                android:textColor="@color/gray90"
                android:textSize="16sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="이름"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="조힘권"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="신청일자"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="2023.11.02(월) 12:02"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="신청내용"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineHeight="24sp"
                        android:text="안녕하세요 우리 코코 잘 부탁합니다.
코코가 슬개골 탈구 수술을 해서 병원비가 많이 나갈거에요... 조금이지만 보탬이 되었으면 좋겠습니다.."
                        android:textColor="@color/gray90"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                />
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="270dp"
                        android:src="@drawable/img_dog10"
                        android:adjustViewBounds="true"
                        android:contentDescription="TODO" />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조아"
                            android:fontFamily="@font/pretendard_bold"
                            android:textSize="44sp"
                            android:textColor="@color/no_green"
                            />

                        <TextView
                            android:layout_marginLeft="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="말티푸"
                            android:fontFamily="@font/pretendard_medium"
                            android:textSize="20sp"
                            android:textColor="#ff8E8E8E"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="@color/grey30"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:gravity="center"

                                android:background="@drawable/btn_outline_grey_round"
                                android:text="성별"
                                android:textColor="#FF838383"
                                android:fontFamily="@font/pretendard_regular"
                                android:textSize="12sp" />
                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="남아"
                                android:fontFamily="@font/pretendard_medium"
                                android:textSize="24sp"
                                android:textColor="@color/black" />
<Space
    android:layout_width="match_parent"
    android:layout_height="6dp"
    />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="중성화 했어요"
                                android:fontFamily="@font/pretendard_regular"
                                android:textSize="14sp"
                                android:textColor="#ff8E8E8E" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="30dp"
                                android:gravity="center"

                                android:background="@drawable/btn_outline_grey_round"
                                android:text="나이"
                                android:textColor="#FF838383"
                                android:fontFamily="@font/pretendard_regular"
                                android:textSize="12sp" />
                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4살"
                                android:fontFamily="@font/pretendard_medium"
                                android:textSize="24sp"
                                android:textColor="@color/black" />
                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2019년 5월생"
                                android:fontFamily="@font/pretendard_regular"
                                android:textSize="14sp"
                                android:textColor="#ff8E8E8E" />

                        </LinearLayout>

                    </LinearLayout>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />
            <LinearLayout

                android:id="@+id/see_accessable_accounts"
                android:layout_width="match_parent"

                android:layout_height="80dp"
                android:background="@drawable/button_outline_grey"
                android:layout_margin="2dp"
                android:paddingVertical="12dp"
                android:paddingHorizontal="12dp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_pack"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1px"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연결할 계좌 선택하기"
                    android:textSize="18sp"
                    android:textColor="@color/grey90"
                    android:fontFamily="@font/pretendard_medium"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1px"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    />






            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_no_green"
                android:text="양도받기"
                android:fontFamily="@font/pretendard_semi_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:id="@+id/make_account_btn"
                />
        </LinearLayout>



    </ScrollView>

</LinearLayout>
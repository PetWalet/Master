<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".NormalAccountActivity">


        <!--    구분선-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingHorizontal="22dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/mypage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:contentDescription="마이페이지 아이콘"
                    android:paddingRight="12dp"
                    android:src="@drawable/icon_mypage" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/bell"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:contentDescription="알림 아이콘"
                    android:src="@drawable/icon_bell" />

                <ImageButton
                    android:id="@+id/search"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:contentDescription="검색버튼 아이콘"
                    android:src="@drawable/icon_search" />

                <ImageButton
                    android:id="@+id/hamburger"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:contentDescription="햄버거 버튼 아이콘"
                    android:src="@drawable/icon_hamburger" />


            </LinearLayout>


            <!--회원 이름+ 안녕하세요-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"

                android:orientation="horizontal">
                <!--  회원이름-->
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="유지나"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

                <!--   안녕하세요     -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="님, 안녕하세요"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

            </LinearLayout>

            <!--    공지사항-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"

                android:background="@drawable/notice_box"

                android:orientation="horizontal">
                <!--        공지사항 내용-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notice_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semi_bold"
                        android:text="농협은행 단독 펫계좌 출시"
                        android:textColor="@color/black"

                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/notice_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="간편한 올포유 페이 사용가능!"
                        android:textColor="@color/black"

                        android:textSize="15sp" />

                </LinearLayout>
                <!--        공지사항 이미지-->
                <ImageView
                    android:id="@+id/notice_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    android:src="@drawable/dog2" />


            </LinearLayout>


            <!--   계좌 종류 탭 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <!--        한눈에-->
                <TextView
                    android:id="@+id/cat"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:paddingHorizontal="10dp"
                    android:text="한눈에"
                    android:textColor="@color/black"

                    android:textSize="24sp" />
                <!--        자산-->
                <TextView
                    android:id="@+id/dog"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:paddingHorizontal="10dp"
                    android:text="자산"
                    android:textColor="@color/grey60"

                    android:textSize="24sp" />


            </LinearLayout>

            <!--    가로선-->
            <View
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="@color/grey30" />


            <!--    펫계좌-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/box_account"

                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="12dp">


                <!--    계좌 헤더-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"


                    android:paddingHorizontal="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="은행정보"
                        android:src="@drawable/bank_nonghyup" />


                    <!--        계좌 정보-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:orientation="vertical">

                        <!--            계좌 타입, 계좌 이름-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/pretendard_bold"
                                android:text="입출금"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/pretendard_semi_bold"
                                android:text="농민건강최고 예금"
                                android:textColor="@color/white"
                                android:textSize="16sp" />


                        </LinearLayout>


                        <!--            은행, 계좌 번호-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--            계좌 번호-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/pretendard_regular"
                                android:text="농협"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                            <!--            계좌 번호-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/pretendard_regular"
                                android:text="110-220-785902"
                                android:textColor="@color/white"

                                android:textSize="15sp" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
                <!--    계좌 잔액-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:orientation="horizontal">
                    <!--잔액-->
                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/pretendard_bold"
                        android:text="8,201,000"
                        android:textColor="@color/white"
                        android:textSize="30sp" />
                    <!--    원-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="원"
                        android:textColor="@color/white"

                        android:textSize="20sp" />


                    <!--    갱신 버튼-->
                    <ImageButton
                        android:id="@+id/btn_retry"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="24dp"
                        android:background="@color/no_green"
                        android:contentDescription="잔액 갱신 버튼"


                        android:src="@drawable/icon_retry_button" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <!--    충전, 거래내역 버튼-->
                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:paddingHorizontal="12dp">

                    <!--        충전 버튼-->

                    <Button
                        android:id="@+id/recharge"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="10"

                        android:background="@drawable/button_white_account"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="충전"
                        android:textColor="@color/no_green"


                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <!--        거래내역 버튼-->
                    <Button
                        android:id="@+id/account_log"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="10"


                        android:background="@drawable/button_white_account"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="거래내역"
                        android:textColor="@color/no_green"

                        android:textSize="18sp" />

                </LinearLayout>

                <!--        최근 거래한 사람들 목록-->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"

                    android:paddingLeft="12dp"
                    android:scrollbars="none">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--            거래내역_item-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="12dp"

                            android:background="@drawable/transaction_people_item_transparent"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/bank_logo"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bank_nonghyup" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <!--                사람 이름, 거래금액-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--사람이름-->
                                <TextView
                                    android:id="@+id/lateset_transaction_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="유지나"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />
                                <!--거래금액-->
                                <TextView
                                    android:id="@+id/lateset_transaction_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:fontFamily="@font/pretendard_regular"

                                    android:text="45,000"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />


                            </LinearLayout>


                        </LinearLayout>

                        <!--            거래내역_item2-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="12dp"

                            android:background="@drawable/transaction_people_item_transparent"


                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bank_nonghyup" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <!--                사람 이름, 거래금액-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--사람이름-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="유지나"
                                    android:textColor="@color/white"

                                    android:textSize="16sp" />
                                <!--거래금액-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="45,000"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />


                            </LinearLayout>


                        </LinearLayout>

                        <!--            거래내역_item3-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="12dp"

                            android:background="@drawable/transaction_people_item_transparent"


                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bank_nonghyup" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <!--                사람 이름, 거래금액-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--사람이름-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="유지나"

                                    android:textColor="@color/white"
                                    android:textSize="16sp" />
                                <!--거래금액-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="45,000"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />


                            </LinearLayout>


                        </LinearLayout>

                        <!--            거래내역_item4-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="12dp"

                            android:background="@drawable/transaction_people_item_transparent"


                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bank_nonghyup" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <!--                사람 이름, 거래금액-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--사람이름-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="유지나"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />
                                <!--거래금액-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"

                                    android:text="45,000"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />


                            </LinearLayout>


                        </LinearLayout>

                        <!--            거래내역_item5-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="12dp"

                            android:background="@drawable/transaction_people_item_transparent"


                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bank_nonghyup" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <!--                사람 이름, 거래금액-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--사람이름-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="유지나"
                                    android:textColor="@color/white"

                                    android:textSize="16sp" />
                                <!--거래금액-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="45,000"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </HorizontalScrollView>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/grey30" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="22dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:text="마이데이터"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="커피사진"
                    android:src="@drawable/coffee" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="금융과 일상의 연결"
                        android:textColor="@color/no_green"

                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="누수는 NO 신용은 UP되는"
                        android:textColor="@color/black"

                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="NH마이데이터"
                        android:textColor="@color/grey80"

                        android:textSize="18sp" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</ScrollView>


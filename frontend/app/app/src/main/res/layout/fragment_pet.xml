<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".MainActivity">


        <!--    구분선-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingHorizontal="22dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/mypage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/icon_mypage"
                    android:background="@color/white"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    />
                <ImageButton
                    android:id="@+id/bell"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/icon_bell"
                    android:background="@color/white"
                    />
                <ImageButton
                    android:id="@+id/search"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/icon_search"
                    android:background="@color/white"
                    />
                <ImageButton
                    android:id="@+id/hamburger"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/icon_hamburger"
                    android:background="@color/white"
                    />





            </LinearLayout>




            <!--회원 이름+ 안녕하세요-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"

                android:orientation="horizontal">
                <!--  회원이름-->
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="유지나"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <!--   안녕하세요     -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="님, 안녕하세요"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

            </LinearLayout>

            <!--    공지사항-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"

                android:background="@drawable/notice_box"

                android:orientation="horizontal">
                <!--        공지사항 내용-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notice_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semi_bold"
                        android:text="잃어버린 내 아이"
                        android:textColor="@color/black"

                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/notice_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="농협은행과 함께 찾아요!"
                        android:textColor="@color/black"

                        android:textSize="15sp" />

                </LinearLayout>
                <!--        공지사항 이미지-->
                <ImageView
                    android:id="@+id/notice_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    android:src="@drawable/dog1" />


            </LinearLayout>


            <!--   계좌 종류 탭 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <!--        한눈에-->
                <TextView
                    android:id="@+id/cat"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:paddingHorizontal="10dp"
                    android:text="한눈에"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"

                    android:textSize="20sp" />
                <!--        자산-->
                <TextView
                    android:id="@+id/dog"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:paddingHorizontal="10dp"
                    android:text="자산"
                    android:textColor="@color/grey60"

                    android:textSize="20sp" />


            </LinearLayout>

            <!--    가로선-->
            <View
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="@color/grey30" />


            <!--    펫계좌-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/box_pet_account"

                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="12dp">


                <!--    계좌 헤더-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"


                    android:paddingHorizontal="12dp">

                    <!--        펫 이미지-->

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/pet_img"
                        android:layout_width="48dp"
                        android:layout_height="48dp"

                        android:layout_gravity="center"
                        android:src="@drawable/zoa"
                        app:civ_border_color="#FF000000"/>

                    <!--        계좌 정보-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:orientation="vertical">

                        <!--            계좌 타입, 계좌 이름-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/pretendard_bold"
                                android:text="멍계좌"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/pretendard_semi_bold"
                                android:text="사랑하는 막둥이 조아"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                        </LinearLayout>


                        <!--            은행, 계좌 번호-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--            계좌 번호-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/pretendard_regular"
                                android:text="농협"
                                android:textColor="@color/grey80"
                                android:textSize="15sp" />

                            <!--            계좌 번호-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/pretendard_regular"
                                android:text="110-220-785902"
                                android:textColor="@color/grey80"

                                android:textSize="15sp" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
                <!--    계좌 잔액-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:orientation="horizontal">
                    <!--잔액-->
                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/pretendard_bold"
                        android:text="8,201,000"
                        android:textColor="@color/black"
                        android:textSize="30sp" />
                    <!--    원-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="원"
                        android:textColor="@color/black"

                        android:textSize="20sp" />


                    <!--    갱신 버튼-->
                    <ImageView
                        android:id="@+id/btn_retry"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"

                        android:layout_marginLeft="24dp"
                        android:src="@drawable/baseline_autorenew_24" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <!--    충전, 거래내역 버튼-->
                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:paddingHorizontal="12dp">

                    <!--        충전 버튼-->

                    <Button
                        android:id="@+id/recharge"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="10"

                        android:background="@drawable/account_button"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="충전"

                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <!--        거래내역 버튼-->
                    <Button
                        android:id="@+id/account_log"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="10"


                        android:background="@drawable/account_button"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="거래내역"

                        android:textSize="18sp" />

                </LinearLayout>

                <!--        최근 거래한 사람들 목록-->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"

                    android:paddingLeft="12dp"
                    android:scrollbars="none">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--            거래내역_item-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="12dp"

                            android:background="@drawable/traansaction_people_item"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/bank_logo"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bank_nonghyup" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <!--                사람 이름, 거래금액-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--사람이름-->
                                <TextView
                                    android:id="@+id/lateset_transaction_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="유지나"
                                    android:textSize="16sp" />
                                <!--거래금액-->
                                <TextView
                                    android:id="@+id/lateset_transaction_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="45,000"
                                    android:textColor="@color/grey90"
                                    android:textSize="16sp" />


                            </LinearLayout>


                        </LinearLayout>

                        <!--            거래내역_item2-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="12dp"

                            android:background="@drawable/traansaction_people_item"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bank_nonghyup" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <!--                사람 이름, 거래금액-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--사람이름-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="유지나"
                                    android:textSize="16sp" />
                                <!--거래금액-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="45,000"
                                    android:textColor="@color/grey90"
                                    android:textSize="16sp" />


                            </LinearLayout>


                        </LinearLayout>

                        <!--            거래내역_item3-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="12dp"

                            android:background="@drawable/traansaction_people_item"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bank_nonghyup" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <!--                사람 이름, 거래금액-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--사람이름-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="유지나"
                                    android:textSize="16sp" />
                                <!--거래금액-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="45,000"
                                    android:textColor="@color/grey90"
                                    android:textSize="16sp" />


                            </LinearLayout>


                        </LinearLayout>

                        <!--            거래내역_item4-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="12dp"

                            android:background="@drawable/traansaction_people_item"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bank_nonghyup" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <!--                사람 이름, 거래금액-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--사람이름-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="유지나"
                                    android:textSize="16sp" />
                                <!--거래금액-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="45,000"
                                    android:textColor="@color/grey90"
                                    android:textSize="16sp" />


                            </LinearLayout>


                        </LinearLayout>

                        <!--            거래내역_item5-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="12dp"

                            android:background="@drawable/traansaction_people_item"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bank_nonghyup" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <!--                사람 이름, 거래금액-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <!--사람이름-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="유지나"
                                    android:textSize="16sp" />
                                <!--거래금액-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pretendard_regular"
                                    android:text="45,000"
                                    android:textColor="@color/grey90"
                                    android:textSize="16sp" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </HorizontalScrollView>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/border_box" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="22dp"
            android:orientation="vertical">

            <!--    계좌에 연결된 반려동물 프로필-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/pretendard_semi_bold"
                android:text="계좌에 연결된"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/pretendard_bold"
                android:text="반려동물 프로필"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />


            <!--    반려동물 프로필-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:background="@drawable/box_dog_profile"

                android:paddingHorizontal="20dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                >
                <!--반려동물 프로필 이미지-->
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/pet_profile2"
                    android:layout_width="140dp"
                    android:layout_height="140dp"

                    android:layout_gravity="center"
                    android:src="@drawable/zoa"
                    app:civ_border_color="#FF000000"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <!--반려동물 이름, 성별-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pet_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/pretendard_bold"
                            android:text="조아"
                            android:textColor="@color/black"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/pet_gender"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:contentDescription="성별"

                            android:layout_gravity="center"
                            android:src="@drawable/baseline_male_24"
                            />
                    </LinearLayout>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        />
                    <!--비문, 내장칩 인증 여부-->
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pet_nose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/btn_finished_identification"
                            android:fontFamily="@font/pretendard_semi_bold"
                            android:text="비문"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                        <Space
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            />
                        <TextView
                            android:id="@+id/pet_chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/btn_not_finished_identification"
                            android:fontFamily="@font/pretendard_semi_bold"
                            android:text="내장칩"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/pretendard_bold"
                            android:text="나이"
                            android:textColor="@color/main_selected"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:id="@+id/pet_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/pretendard_bold"
                            android:text="4살"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/pretendard_bold"
                            android:text="견종"
                            android:textColor="@color/main_selected"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:id="@+id/pet_breed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/pretendard_bold"
                            android:text="말티푸"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>





                </LinearLayout>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp"
                />


        </LinearLayout>
        <View
            android:layout_width="match_parent"

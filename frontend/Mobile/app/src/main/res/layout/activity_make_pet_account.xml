<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MakePetAccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:contentDescription="이전"
                    android:paddingRight="22dp"
                    android:src="@drawable/baseline_arrow_back_ios_new_24" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:gravity="center"
                    android:text="올포유 강아지 계좌 만들기"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="22dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_pre" />

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="22dp"

                    android:layout_marginBottom="22dp"
                    android:background="@drawable/button_black_round"
                    android:contentDescription="카메라 버튼"
                    android:src="@drawable/icon_camera" />
            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginHorizontal="22dp"
                android:orientation="vertical">

                <LinearLayout

                    android:id="@+id/see_accessable_accounts"
                    android:layout_width="match_parent"

                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/box_recommend_item2"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/img_pack" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="연결할 계좌 선택하기"
                        android:textColor="@color/grey90"
                        android:textSize="20sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_arrow_forward_ios_24" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:text="등록 방식 선택하기"
                    android:textColor="@color/grey90"
                    android:textSize="22sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="220dp"

                            android:background="@drawable/button_no_yellow">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_no_yellow"

                                android:contentDescription="강아지 비문"
                                android:src="@drawable/btn_register_1" />


                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_medium"
                            android:gravity="center"
                            android:letterSpacing="0.05"
                            android:text="비문등록"
                            android:textColor="@color/grey60"
                            android:textSize="24sp" />


                    </LinearLayout>


                    <Space
                        android:layout_width="12dp"
                        android:layout_height="10dp" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="220dp"

                            android:background="@drawable/button_no_yellow">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_no_yellow"

                                android:contentDescription="강아지 비문"
                                android:src="@drawable/btn_register_2" />


                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_medium"
                            android:gravity="center"
                            android:letterSpacing="0.05"
                            android:text="내장칩등록"
                            android:textColor="@color/grey90"
                            android:textSize="24sp" />


                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <!--                인적사항 입력-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:letterSpacing="0.05"
                        android:text="이름"
                        android:textColor="@color/grey90"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/pet_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:hint="반려동물의 이름을 입력하세요"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey80"
                        android:textSize="20sp" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:letterSpacing="0.05"
                        android:text="품종"
                        android:textColor="@color/grey90"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/pet_breed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:hint="품종을 입력하세요"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey80"
                        android:textSize="20sp" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:letterSpacing="0.05"
                        android:text="생년월일"
                        android:textColor="@color/grey90"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/pet_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:hint="반려동물의 생년월일을 입력하세요"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey80"
                        android:textSize="20sp" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:letterSpacing="0.05"
                        android:text="몸무게(kg)"
                        android:textColor="@color/grey90"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/pet_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:hint="반려동물의 몸무게를 입력하세요"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey80"
                        android:textSize="20sp" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:letterSpacing="0.05"
                        android:text="성별"
                        android:textColor="@color/grey90"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/pet_gender_male"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_outline_grey"
                            android:fontFamily="@font/pretendard_medium"
                            android:text="남아"
                            android:textColor="@color/grey60"
                            android:textSize="18sp" />

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                        <Button
                            android:id="@+id/pet_gender_female"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_outline_grey"
                            android:fontFamily="@font/pretendard_medium"
                            android:minHeight="48dp"
                            android:text="여아"
                            android:textColor="@color/grey60"
                            android:textSize="18sp" />


                    </LinearLayout>


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:letterSpacing="0.05"

                        android:text="증성화여부"
                        android:textColor="@color/grey90"

                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/is_neutured_ok"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_outline_grey"
                            android:fontFamily="@font/pretendard_medium"

                            android:minHeight="48dp"
                            android:text="했어요"
                            android:textColor="@color/grey60"
                            android:textSize="18sp" />

                        <Space
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                        <Button
                            android:id="@+id/is_neutured_no"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_margin="2dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"

                            android:background="@drawable/button_outline_grey"
                            android:fontFamily="@font/pretendard_medium"
                            android:minHeight="48dp"
                            android:text="안했어요"
                            android:textColor="@color/grey60"
                            android:textSize="18sp" />


                    </LinearLayout>


                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:letterSpacing="0.05"
                        android:text="사용용도 선택"

                        android:textColor="@color/grey90"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/type_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:background="@drawable/button_outline_no_green_round"
                            android:padding="16dp"
                            android:text="동물병원"
                            android:textSize="18dp" />

                        <Space
                            android:layout_width="6dp"
                            android:layout_height="10dp" />

                        <Button
                            android:id="@+id/type_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:background="@drawable/button_outline_no_green_round"
                            android:padding="16dp"
                            android:text="애견카페"

                            android:textSize="18dp" />

                        <Space
                            android:layout_width="6dp"
                            android:layout_height="10dp" />

                        <Button
                            android:id="@+id/type_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:background="@drawable/button_outline_no_green_round"
                            android:padding="16dp"
                            android:text="애견미용"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/type_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:background="@drawable/button_outline_no_green_round"
                            android:padding="16dp"
                            android:text="애견용품"
                            android:textSize="18dp" />

                        <Space
                            android:layout_width="6dp"
                            android:layout_height="10dp" />

                        <Button
                            android:id="@+id/type_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:background="@drawable/button_outline_no_green_round"
                            android:padding="16dp"
                            android:text="반려견놀이터"
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="22dp" />


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />


                <Button
                    android:id="@+id/make_account_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_no_green"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:text="계좌 발급하기"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>
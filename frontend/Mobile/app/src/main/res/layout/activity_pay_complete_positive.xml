<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PayCompletePositiveActivity">


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="22dp"
        android:background="@color/white"
        android:contentDescription="이전버튼"

        android:src="@drawable/baseline_arrow_back_ios_new_24" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="46dp" />

    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="결제가\n완료되었습니다"

        android:textColor="@color/black"
        android:textSize="46sp" />


    <com.airbnb.lottie.LottieAnimationView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/end_cat" />





    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/go_home"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="22dp"
        android:background="@drawable/button_no_green"
        android:text="홈으로 돌아가기"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/white"

        android:textSize="24dp" />
    <Space
    android:layout_width="match_parent"
    android:layout_height="10dp" />
    <TextView
        android:id="@+id/go_recipt"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="거래 영수증 보기"

        android:textColor="@color/grey90"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />


</LinearLayout>


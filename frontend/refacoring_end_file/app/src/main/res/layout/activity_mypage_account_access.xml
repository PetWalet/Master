<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="22dp"
    android:paddingTop="22dp"
    tools:context=".MypageAccountAccessActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <ImageButton
        android:paddingRight="22dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:contentDescription="이전버튼"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="나의 펫계좌를 열람중인 가족들"
            android:textColor="@color/grey90"
            android:textSize="24sp" />


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:orientation="vertical">
            
            
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/view_name"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:text="김노지"
                    android:textColor="@color/grey90"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/view_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="권한 부여일 2022.11.25"
                    android:textColor="@color/grey90"
                    android:textSize="14sp" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    />

                <Button
                    android:id="@+id/view_cancel"
                    android:layout_width="80sp"
                    android:layout_height="48dp"
                    android:text="삭제"
                    android:textSize="18sp"
                    android:textColor="@color/grey80"
                    android:background="@drawable/button_outline_grey"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/grey40"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:text="김노지"
                    android:textColor="@color/grey90"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="권한 부여일 2022.11.25"
                    android:textColor="@color/grey90"
                    android:textSize="14sp" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    />

                <Button
                    android:layout_width="80sp"
                    android:layout_height="48dp"
                    android:text="삭제"
                    android:textSize="18sp"
                    android:textColor="@color/grey80"
                    android:background="@drawable/button_outline_grey"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/grey40"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:text="김노지"
                    android:textColor="@color/grey90"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="권한 부여일 2022.11.25"
                    android:textColor="@color/grey90"
                    android:textSize="14sp" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    />

                <Button
                    android:layout_width="80sp"
                    android:layout_height="48dp"
                    android:text="삭제"
                    android:textSize="18sp"
                    android:textColor="@color/grey80"
                    android:background="@drawable/button_outline_grey"
                    />

            </LinearLayout>

            

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="열람신청"
            android:textColor="@color/grey90"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="열람신청(2건)"
            android:textColor="@color/grey90"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/access_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/access_apply_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semi_bold"
                        android:text="김노지"
                        android:textColor="@color/grey90"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="1" />

                    <TextView
android:id="@+id/access_apply_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="2023.10.23 14:20"
                        android:textColor="@color/grey90"
                        android:textSize="14sp" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:letterSpacing="0.05"
                    android:text="조아 이모입니다! 우리 조아를 위해 용돈 보태고 같이 육아하고 싶어서 열람권한 신청합니다!"
                    android:textColor="@color/grey80"
                    android:id="@+id/access_apply_content"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/access_apply_ok"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_outline_grey"
                        android:fontFamily="@font/pretendard_semi_bold"
                        android:text="수락"
                        android:textColor="@color/grey90"
                        android:textSize="18sp" />


                    <Space
                        android:layout_width="12dp"
                        android:layout_height="10dp" />

                    <Button
                        android:id="@+id/access_apply_no"

                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_outline_grey"
                        android:fontFamily="@font/pretendard_semi_bold"
                        android:text="거절"
                        android:textColor="@color/grey90"
                        android:textSize="18sp" />


                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semi_bold"
                        android:text="김노지"
                        android:textColor="@color/grey90"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="1" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="2023.10.23 14:20"
                        android:textColor="@color/grey90"
                        android:textSize="14sp" />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:letterSpacing="0.05"
                    android:text="조아 이모입니다! 우리 조아를 위해 용돈 보태고 같이 육아하고 싶어서 열람권한 신청합니다!"
                    android:textColor="@color/grey80"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_outline_grey"
                        android:fontFamily="@font/pretendard_semi_bold"
                        android:text="수락"
                        android:textColor="@color/grey90"
                        android:textSize="18sp" />


                    <Space
                        android:layout_width="12dp"
                        android:layout_height="10dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_outline_grey"
                        android:fontFamily="@font/pretendard_semi_bold"
                        android:text="거절"
                        android:textColor="@color/grey90"
                        android:textSize="18sp" />


                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context=".RequestViewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/white"
                    android:contentDescription="이전버튼"
                    android:paddingRight="22dp"
                    android:src="@drawable/baseline_arrow_back_ios_new_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:gravity="center"
                    android:text="반려동물 계좌 열람 신청"
                    android:textColor="@color/grey80"
                    android:textSize="20sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@color/no_green">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="22dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_semi_bold"
                        android:text="올포유(AllForYou) 반려동물 계좌"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="22dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/head"
                        android:fontFamily="@font/pretendard_regular"
                        android:gravity="center|start"
                        android:letterSpacing="0.15"
                        android:text="올포유(All For You)와 함께\n궁금한 우리 가족의\n금융 생활을\n함께해보세요~"
                        android:textColor="@color/white"

                        android:textSize="18sp"

                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="22dp"
                    android:src="@drawable/see_account"

                    />


            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />

            <TextView

                android:layout_marginHorizontal="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semi_bold"

                android:text="반려동물 계좌 열람 신청"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="22dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"

                        android:text="반려동물 이름"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/pet_name"
                        android:paddingVertical="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="반려가족의 이름을 입력하세요"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey60"
                        />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"

                        android:text="반려동물 계좌번호"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/pet_account_number"
                        android:paddingVertical="12dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="반려가족의 계봐번호를 입력하세요"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey60"
                        />

                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"

                        android:text="신청내용"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                    <EditText
                        android:paddingVertical="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="간단한 메세지를 남겨주세요"
                        android:textSize="18sp"
android:id="@+id/pet_view_request"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey60"
                        />

                </LinearLayout>



            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/grey20"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="22dp"
                >
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"

                    android:text="알아두세요"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"

                    android:text="반려동물 계좌 열람은 계좌주의 의사에 따라 거절될 수 있으며, 확인하는데 시간이 소요된다는 점 알려드립니다.
관련 모든 문의사항은 농협은행 ‘02-5555-7777’로 문의바랍니다."
                    android:textColor="@color/grey80"
                    android:letterSpacing="0.15"
                    android:textSize="14sp" />



            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />

            <Button
                android:id="@+id/do_apply"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="열람 신청하기"
                android:fontFamily="@font/pretendard_semi_bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/button_no_green"
                android:layout_marginHorizontal="22dp"

                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />

        </LinearLayout>


    </ScrollView>





</LinearLayout>
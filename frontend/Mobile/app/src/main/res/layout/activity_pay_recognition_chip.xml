<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PayRecognitionActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            />
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:background="@color/white"
            android:contentDescription="이전버튼"

            android:layout_marginHorizontal="22dp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="46dp"
            />

        <TextView
            android:layout_marginHorizontal="22dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="내장칩을\n인식해주세요"

            android:textColor="@color/black"
            android:textSize="36sp" />

        <TextView
            android:layout_marginHorizontal="22dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="반려동물의 목 뒷부분에서\n‘삑’소리가 날 때까지 기다려 주세요."

            android:textColor="@color/grey90"
            android:textSize="18sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_marginHorizontal="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ToggleButton
                android:background="#00000000"
                android:id="@+id/ble_on_off_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="블루투스 연결"
                android:textColor="@color/no_green"
                android:fontFamily="@font/pretendard_semi_bold"
                />

            <Button
                android:id="@+id/scanBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록칩 스캔"
                android:paddingHorizontal="16dp"
                android:background="@drawable/button_no_green"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_semi_bold"
                android:textSize="18sp"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            />


        <ImageView
            android:layout_gravity="center"
            android:layout_width="600dp"
            android:layout_height="300dp"
            android:src="@drawable/img_pet_recognition_chip"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


<!--        <Button-->
<!--            android:id="@+id/write_chip_id"-->
<!--            android:layout_marginHorizontal="22dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="60dp"-->
<!--            android:text="임시버튼"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="24dp"-->

<!--            android:background="@drawable/button_no_green"-->
<!--            />-->
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            />


    </LinearLayout>
</ScrollView>






</LinearLayout>
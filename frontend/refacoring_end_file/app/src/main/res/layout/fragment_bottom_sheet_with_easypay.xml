<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BottomSheetWithEasypayFragment">

    <LinearLayout
        android:id="@+id/bottom_sheet_layout"
        app:behavior_hideable="false"
        app:behavior_peekHeight="320dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_keypad"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".BottomSheetWithEasypayFragment">

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />
        <!--        간편 금액 입력-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@color/lime10"

                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="+1만"
                android:textColor="@color/main_selected" />

            <Space
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@color/lime10"

                android:fontFamily="@font/pretendard_medium"

                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="+5만"
                android:textColor="@color/main_selected" />

            <Space
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@color/lime10"

                android:fontFamily="@font/pretendard_medium"

                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="+10만"
                android:textColor="@color/main_selected" />

            <Space
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />


            <Space
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@color/lime10"

                android:fontFamily="@font/pretendard_medium"

                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="+전액"
                android:textColor="@color/main_selected" />


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <!--        키패드-->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:columnCount="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"

                android:gravity="center"
                android:text="1"
                android:textColor="@color/grey90"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"


                android:gravity="center"
                android:text="2"
                android:textColor="@color/grey90"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"


                android:gravity="center"
                android:text="3"
                android:textColor="@color/grey90"

                android:textSize="28sp" />

            <TextView
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"

                android:gravity="center"
                android:text="4"
                android:textColor="@color/grey90"

                android:textSize="28sp" />

            <TextView
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"


                android:gravity="center"
                android:text="5"
                android:textColor="@color/grey90"

                android:textSize="28sp" />

            <TextView
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"


                android:gravity="center"
                android:text="6"
                android:textColor="@color/grey90"

                android:textSize="28sp" />

            <TextView
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"

                android:gravity="center"
                android:text="7"
                android:textColor="@color/grey90"

                android:textSize="28sp" />

            <TextView
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"


                android:gravity="center"
                android:text="8"
                android:textColor="@color/grey90"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"


                android:gravity="center"
                android:text="9"
                android:textColor="@color/grey90"
                android:textSize="28sp" />


            <ImageButton
                android:id="@+id/del"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/white"

                android:contentDescription="delete latest number button"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"

                android:src="@drawable/icon_previous"

                android:textSize="28sp" />

            <TextView
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"


                android:gravity="center"
                android:text="0"
                android:textColor="@color/grey90"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/finish"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:fontFamily="@font/pretendard_medium"


                android:gravity="center"
                android:text="완료"
                android:textColor="@color/grey90"
                android:textSize="26sp" />


        </GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>

</FrameLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    android:background="@drawable/box_dialog"
    android:orientation="vertical"
    tools:context=".PayMethodActivity">

    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_close_24"
        android:background="@color/white"
        android:layout_gravity="end"
        android:contentDescription="close button"
        android:layout_marginHorizontal="14dp"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <!--  회원이름-->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="결제 아이콘"
        android:src="@drawable/icon_card"

        />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="결제수단을 선택하세요"

        android:textColor="@color/black"
        android:textSize="28sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="22dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/nose_print"
                android:layout_width="match_parent"
                android:layout_height="250dp"


                android:background="@drawable/box_chip_un"
                android:adjustViewBounds="true"
                android:orientation="vertical"

                >

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />


                <ImageView
                    android:id="@+id/nose"
                    android:layout_width="180dp"

                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_register_1" />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="비문인식"
                android:textColor="@color/grey60"
                android:letterSpacing="0.05"
                android:textSize="24sp" />

        </LinearLayout>




        <Space
            android:layout_width="12dp"
            android:layout_height="10dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/chip"
                android:layout_width="match_parent"
                android:layout_height="250dp"

                android:background="@drawable/box_chip"
                android:adjustViewBounds="true"
                android:orientation="vertical"

                >

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />


                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_register_2" />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/pretendard_medium"
                android:gravity="center"
                android:text="등록칩인식"
                android:textColor="@color/grey90"
                android:letterSpacing="0.05"
                android:textSize="24sp" />

        </LinearLayout>


    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

</LinearLayout>
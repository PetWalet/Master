<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PayRequestActivity">


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:background="@color/white"
            android:contentDescription="이전버튼"

            android:layout_marginLeft="22dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거래내역조회"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="18sp"
            android:textColor="@color/black"
            />


    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="46dp"
        />

    <TextView
        android:layout_marginHorizontal="22dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="결제요청이\n발생했습니다"

        android:textColor="@color/black"
        android:textSize="36sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="6dp"
        />

    <TextView
        android:layout_marginHorizontal="22dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="요청내용을 확인 후 결제버튼을 눌러주세요"

        android:textColor="@color/grey90"
        android:textSize="18sp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#FF73B94C"
            app:cardCornerRadius="20dp"
            android:layout_marginHorizontal="22dp"

            android:layout_height="240dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
android:id="@+id/store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="참사랑동물병원"

                    android:textColor="@color/white"
                    android:textSize="24sp" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="결제처"

                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        />

                    <TextView
android:id="@+id/store_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="동물병원"

                        android:textColor="@color/white"
                        android:textSize="16sp" />


                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="주소"

                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        />

                    <TextView
android:id="@+id/store_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="서울특별시 강남구 역삼1동 도곡로 189"

                        android:textColor="@color/white"
                        android:textSize="16sp" />


                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="결제처"

                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        />

                    <TextView
android:id="@+id/store_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_medium"
                        android:text="2023-11-02 13:05:38"

                        android:textColor="@color/white"
                        android:textSize="16sp" />


                </LinearLayout>
                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/white"
                    />
                <Space
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    />
                <TextView
                    android:layout_gravity="end"
                    android:id="@+id/store_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semi_bold"
                    android:text="15000원"

                    android:textColor="@color/white"
                    android:textSize="28sp" />

<!--                <Button-->
<!--                    android:id="@+id/store_call"-->
<!--                    android:layout_margin="2dp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:background="@drawable/button_fifty_white"-->
<!--                    android:text="전화걸기"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="14sp"-->

<!--                    android:fontFamily="@font/pretendard_medium"-->
<!--                    />-->



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <View
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="36dp"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/box_green_mm"
            />
        <View
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="50dp"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/box_green_nn"
            />



    </RelativeLayout>




    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_marginHorizontal="22dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="결제 요청을 취소합니다"
        android:textColor="@color/no_green"
        android:textSize="20dp"

        android:background="@drawable/button_outline_no_green"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <Button
        android:id="@+id/btn_accept"
        android:layout_marginHorizontal="22dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="결제 수락"
        android:textColor="@color/white"
        android:textSize="20dp"

        android:background="@drawable/button_no_green"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />





</LinearLayout>